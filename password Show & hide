<body>
    <input type="password" name="" id="Password">
    <input type="checkbox" name="" onclick="mypass()"> show password

    <script>
        var Password = document.getElementById('Password');
        function mypass(){
            if(Password.type=="password"){
                Password.type="text";
            }else{
                Password.type="password";
            }
        }
    </script>
